{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "pythonArgs": ["-Xfrozen_modules=off"],
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG" : "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",

            ],
            "jinja": true
        }
    ]
}
